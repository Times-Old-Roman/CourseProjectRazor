@page "{seatNum}"
@model CourseProjectRazor.Controllers.FinishModel
@using CourseProjectRazor
@namespace CourseProjectRazor.Views
@{
	var choice = RouteData.Values["seatNum"];
}

<!Doctype html>
<html>
<head>
	<meta charset="utf-8" />
	<link rel="stylesheet" type="text/css" href="~/css/main.css" />
	<title>Оплата</title>
	<style>
		body {
			background: linear-gradient(to right,#AE00FF, #000000);
			overflow-x: hidden;
			overflow-y: hidden;
		}
	</style>
</head>
<body>
	<header>
		<div class="headerWrapper">
			<h3 class="headContentColumn">
				<a href='@Url.Page("/Index")'>Главная страница</a>
			</h3>
		</div>
	</header>
	<div class="thankMessage">
		<h1>Оплата прошла успешно!</h1>
		<p><h1>Ваше место: №@choice.</h1></p>
	</div>
</body>
</html>